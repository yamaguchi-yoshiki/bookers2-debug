<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user, have_room: @have_room, room: @room, entry: @entry %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <h4 class="mt-3">投稿数の前日比、先週比</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @today_book.size %></td>
            <td><%= @yesterday_book.size %></td>
            <td>
              <% if @the_day_before %>
                <%= @the_day_before.round %>%
              <% else %>
                前日の投稿はありません
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <table class="table table-bordered pr-5">
        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>先週の投稿数</th>
            <th>先週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @this_week_book.size %></td>
            <td><%= @last_week_book.size %></td>
            <td>
              <% if @the_week_before %>
                <%= @the_week_before.round %>%
              <% else %>
                先週の投稿はありません
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <h4 class="mt-3">7日分の投稿数</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th><%= @six_days_ago %></th>
            <th><%= @five_days_ago %></th>
            <th><%= @four_days_ago %></th>
            <th><%= @three_days_ago %></th>
            <th><%= @two_days_ago %></th>
            <th><%= @yesterday %></th>
            <th><%= @today %> (今日)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @six_days_ago_book.size %></td>
            <td><%= @five_days_ago_book.size %></td>
            <td><%= @four_days_ago_book.size %></td>
            <td><%= @three_days_ago_book.size %></td>
            <td><%= @two_days_ago_book.size %></td>
            <td><%= @yesterday_book.size %></td>
            <td><%= @today_book.size %></td>
          </tr>
        </tbody>
      </table>
      <canvas id="myChart" width="200" height="100"></canvas>
      <script>
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: <%= @chartlabels %>,
            datasets: [{
              label: "投稿した本の数",
              data: [4, 5, 2, 0, 4, 6, 1],
              backgroundColor: 'rgba(0, 0, 0, 0)',
              borderColor: 'rgba(0, 0, 255, 1.0)',
              fill: false
            }]
          },
        });
      </script>

      <h4 class="mt-3">投稿数検索</h4>
      <%= form_with url: user_search_path(@user), local: false, method: :get do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
      <div id="created_count">
        <% if @created_book.present? %>
          <%= render 'search', created_book: @created_book %>
        <% end %>
      </div>
    </div>
  </div>
</div>
