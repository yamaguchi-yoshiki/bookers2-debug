<div class='container'>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <h3>
        <% @entries.each do |e| %>
          <% unless e.user == current_user %>
            <strong> <%= e.user.name %> </strong>
          <% end %>
        <% end %>
        とのチャット
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table table-sm">
        <thead>
          <tr>
            <th></th>
            <th>messages--------------------</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <% if message.user == current_user %>
                <td>
                  <%= image_tag message.user.get_profile_image, size: '100x100' %><br>
                  あなた
                </td>
                <td class="text-success"><%= message.content %></td>
                <td></td>
              <% else %>
                <td></td>
                <td><%= message.content %></td>
                <td>
                  <%= image_tag message.user.get_profile_image, size: '100x100' %><br>
                  <%= message.user.name %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <%= form_with model: @message, local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :content, class: 'form-control', placeholder: "メッセージを入力" %>
          <span class="text-black-50">＊Enterで送信</span>
        </div>
        <%= f.hidden_field :room_id, value: @room.id %>
        <% f.submit %>
      <% end %>
    </div>
  </div>
</div>
